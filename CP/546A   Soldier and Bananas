import java.util.*;
public class Soldier {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int k=sc.nextInt(),n=sc.nextInt(),w=sc.nextInt();
        int total=w*(w+1)/2*k;
        int borrow=total-n;
        if(total>n)System.out.println(borrow);
        else System.out.println(0);
    }
}
